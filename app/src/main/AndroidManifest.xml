<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.naohman.language.transsiberian"
    android:installLocation="preferExternal" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.Splash"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Definition"
            android:label="@string/title_activity_definition" >
        </activity>
        <activity
            android:name=".Activities.Translate"
            android:label="@string/title_activity_translate" >
        </activity>
        <activity
            android:name=".Activities.Landing"
            android:label="@string/title_activity_landing" >
        </activity>
        <activity
            android:name=".Activities.Exchange"
            android:label="@string/title_activity_exchange"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".Activities.Authenticate"
            android:label="@string/title_activity_study"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="x-transsiberian-oauth-quizlet" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Study"
            android:label="@string/title_activity_study" >
        </activity>
        <activity
            android:name=".Activities.SetListActivity"
            android:label="@string/title_activity_set" >
        </activity>
        <activity
            android:name=".Activities.NewSet"
            android:label="@string/title_activity_new_set"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".Activities.SetActivity"
            android:label="@string/title_activity_set" >
        </activity>
        <activity
            android:name=".Activities.NewTerm"
            android:label="@string/title_activity_new_term"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".Activities.NewTermOrSet"
            android:label="@string/title_activity_new_term_or_set" >
        </activity>
    </application>

</manifest>
