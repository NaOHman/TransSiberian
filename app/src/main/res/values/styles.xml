<resources>

    <!-- Base application theme. -->
    <style name="Kholodno" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">true</item>
        <item name="actionBarStyle">@style/myActionBarStyle</item>
    </style>

    <style name="Kholodno.NoActionBar" parent="android:Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="myActionBarStyle"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/hi_bg_1</item>
        <item name="background">@color/hi_bg_1</item>
        <item name="android:textColor">@color/hi_fg_1</item>
    </style>

</resources>
