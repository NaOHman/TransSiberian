<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.naohman.transsiberian.SetUp.Landing">
    <Button
        android:id="@+id/translate"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:textColor="@color/hi_fg_3"
        android:background="@color/hi_bg_3"
        android:textSize="@dimen/heading"
        android:text="@string/translate"
        android:onClick="translate"
        />
    <Button
        android:id="@+id/study"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:textColor="@color/hi_fg_1"
        android:background="@color/hi_bg_1"
        android:textSize="@dimen/heading"
        android:text="@string/study"
        android:onClick="study"
        />
    <Button
        android:id="@+id/exchange"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/hi_bg_2"
        android:textColor="@color/hi_fg_2"
        android:textSize="@dimen/heading"
        android:text="@string/exchange"
        android:onClick="exchange"
        />
</LinearLayout>
