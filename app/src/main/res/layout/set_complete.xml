<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/flashcard_margin">
    <TextView
        android:id="@+id/completed_set_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/flashCard"
        android:textSize="@dimen/heading"
        android:textStyle="bold"
        android:maxLines="4"
        />
    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/flashCard"
        android:textSize="@dimen/subheading"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/next_round"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="@string/continue_string"
            android:textColor="@color/hi_fg_1"
            android:background="@color/hi_bg_1"
            android:onClick="nextRound"
            />
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/hi_fg_2"
            android:background="@color/hi_bg_2"
            android:text="@string/restart"
            android:onClick="restart"
            />
        </LinearLayout>
</LinearLayout>