<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.naohman.transsiberian.Exchange.Exchange">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="4"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/input_label"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="45"
                android:gravity="center"
                android:textSize="@dimen/heading"
                android:clickable="true"
                android:text="@string/dollar"
                android:onClick="swap"
                />
            <Space
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="10"
                />
            <TextView
                android:id="@+id/output_label"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="45"
                android:gravity="center"
                android:textSize="@dimen/heading"
                android:clickable="true"
                android:text="@string/ruble"
                android:onClick="swap"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="3"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/currency_et"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="45"
                android:textSize="@dimen/heading"
                android:imeOptions="actionGo"
                android:inputType="numberDecimal"
                />
            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_forward"
                />
            <TextView
                android:id="@+id/currency_tv"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="45"
                android:gravity="center"
                android:textSize="@dimen/heading"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/convert"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:textColor="@color/hi_fg_1"
        android:background="@color/hi_bg_1"
        android:textSize="@dimen/heading"
        android:text="@string/convert"
        android:onClick="convert"
        />
</LinearLayout>
