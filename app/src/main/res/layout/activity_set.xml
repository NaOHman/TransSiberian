<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.naohman.language.transsiberian.Activities.SetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="study">
        <TextView
            android:layout_width="match_parent"
            android:text="test"
            android:textSize="32sp"
            android:maxLines="2"
            android:id="@+id/set_title"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/set_description"
            android:text="test"
            android:paddingLeft="24sp"
            android:maxLines="2"
            android:textSize="24sp"
            android:layout_height="wrap_content" />
        </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:id="@+id/term_lv"
        android:layout_weight="1"></ListView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="New Term"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:id="@+id/term_term"/>
    <TextView
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defintion"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:imeOptions="actionGo"
        android:id="@+id/term_definition"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add Term"
        android:textColor="#ffffff"
        android:background="#00004b"
        android:onClick="addTerm"
        />
</LinearLayout>
